{
    "settings": {
        "outputDir": "$WORKSPACE/test-results"
    },
    "jobs": [
        {
            "name": "unit",
            "default": true,
            "testCommand": "apex",
            "orgs": [
                "sfdx-simple-default"
            ],
            "tests": [
                "DemoControllerTests"
            ]
        },
        {
            "name": "pull-request",
            "testCommand": "integration",
            "selenium": true,
            "orgs": [
                "sfdx-simple-default"
            ],
            "data": "config/workspace-scratch-def.json",
            "tests": [
                "DemoPageUITest"
            ]
        },
        {
            "name": "master",
            "jobRefs": [
                "unit", "pull-request"
            ]
        }
    ],
    "orgs": [
        {
            "name": "sfdx-simple-default",
            "definition": "config/workspace-scratch-def.json"
        }
    ],
    "commands": [
        {
            "name": "integration",
            "exec": "mvn",
            "timeout": 100000,
            "env": {
                "SALESFORCE_ACCESS_TOKEN": "$ORG_ACCESSTOKEN",
                "SALESFORCE_INSTANCE_URL": "$ORG_INSTANCEURL",
                "INTEGRATION_TEST_RESULTS": "$outputDir"
            },
            "args": [
                "-f $WORKSPACE/test/pom.xml",
                "-Dtest=$TESTS",
                "integration-test"
            ]
        }
    ],
    "contexts": [
        {
            "name": "local",
            "useWorkspaceOrg": true,
            "pushSource": false
        },
        {
            "name": "heroku-ci",
            "default": true
        }
    ]
}
